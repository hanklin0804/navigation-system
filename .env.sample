# 台灣導航系統 - 環境變數範例檔案
# 複製此檔案為 .env 並設定您的值

# === 資料庫設定 ===
POSTGRES_USER=user
POSTGRES_PASSWORD=password
POSTGRES_DB=db

# === OSRM 地圖設定 ===
OSRM_MAP=taiwan

# === Django 設定 ===
# 重要：請更改為您自己的 SECRET_KEY
# 生成方式：python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
DJANGO_SECRET_KEY=django-insecure-CHANGE-THIS-IN-PRODUCTION

# 開發/生產環境設定
DJANGO_DEBUG=True
DJANGO_ALLOWED_HOSTS=*

# === 網域和 IP 設定 ===
# 請更改為您的實際 IP 地址或網域名稱
SERVER_IP=localhost
DOMAIN_NAME=localhost

# === SSL 憑證設定 ===
# 是否啟用 HTTPS (True/False)
ENABLE_HTTPS=True
# SSL 憑證類型 (selfsigned/letsencrypt)
SSL_TYPE=selfsigned

# === 安全性設定 ===
# Token 過期時間 (秒)
TOKEN_EXPIRE_TIME=86400
# 允許的最大位置搜尋半徑 (公里)
MAX_SEARCH_RADIUS=10

# === Redis 設定 ===
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# === 日誌設定 ===
LOG_LEVEL=INFO

# === 郵件設定 (如需要密碼重設功能) ===
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password